<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td>
  		      <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag(@book.user, :profile_image, :size, 100, 100, fallback: "no-image-icon.jpg") %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>

          <td>
            <div id="favorite_button_<%= @book.id %>">
              <%= render 'favorites/favorite_button', book: @book %>
            </div>
          </td>

          <td>
            コメント数: <%= @book.book_comments.count %>
          </td>

          <% if @book.user == current_user %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book),
                class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' },
                class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            </td>
          <% end %>
        </tr>
      </table>

      <% @book.book_comments.each do |book_comment| %>
        <div class="media mb-3">
          <%= link_to user_path(book_comment.user) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg", class: "mr-3") %>
          <% end %>
          <div class="media-body">
            <div class="media-heading">
              <%= link_to book_comment.user.name, user_path(book_comment.user) %>
            </div>
            <div class="text-break">
              <%= book_comment.comment %>
            </div>
            <% if book_comment.user == current_user %>
              <div class="text-right">
                <%= link_to 'Destroy', book_book_comment_path(@book, book_comment), method: :delete, data: {confirm: '本当に削除しますか？'},
                  class: "btn btn-outline-danger btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>


      <%= form_with model: [@book, @book_comment], local: true do |f| %>
        <%= render 'layouts/errors', obj: @book_comment %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control"  %>
        </div>
        <%= f.submit "送信", class: "button btn-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
</div>